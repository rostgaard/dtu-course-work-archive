<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xalan="http://xml.apache.org/xslt" xmlns:webproject2="http://www.netbeans.org/ns/web-project/2" xmlns:jaxws="http://www.netbeans.org/ns/jax-ws/1">
    <!--
                ===================
                JAX-WS WSIMPORT SECTION
                ===================
            -->
    <target name="wsimport-init" depends="init">
        <mkdir dir="${build.generated.sources.dir}/jax-ws"/>
        <mkdir dir="${build.generated.sources.dir}/jax-ws"/>
        <taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
            <classpath path="${java.home}/../lib/tools.jar:${j2ee.platform.wsimport.classpath}:${javac.classpath}"/>
        </taskdef>
        <condition property="conf-dir" value="${conf.dir}/" else="">
            <isset property="conf.dir"/>
        </condition>
    </target>
    <target name="wsimport-client-BankService" depends="wsimport-init">
        <mkdir dir="${build.generated.dir}/jax-wsCache/BankService"/>
        <wsimport sourcedestdir="${build.generated.dir}/jax-wsCache/BankService" destdir="${build.generated.dir}/jax-wsCache/BankService" wsdl="${basedir}/${conf-dir}xml-resources/web-service-references/BankService/wsdl/fastmoney.imm.dtu.dk_8080/BankService.wsdl" catalog="catalog.xml" extension="true" verbose="true" wsdlLocation="http://fastmoney.imm.dtu.dk:8080/BankService?wsdl" xnocompile="true">
            <depends file="${basedir}/${conf-dir}xml-resources/web-service-references/BankService/wsdl/fastmoney.imm.dtu.dk_8080/BankService.wsdl"/>
            <produces dir="${build.generated.dir}/jax-wsCache/BankService"/>
        </wsimport>
        <copy todir="${build.generated.sources.dir}/jax-ws">
            <fileset dir="${build.generated.dir}/jax-wsCache/BankService">
                <include name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="wsimport-client-clean-BankService" depends="-init-project">
        <delete dir="${build.generated.sources.dir}/jax-ws/dk/dtu/imm/fastmoney"/>
        <delete dir="${build.generated.dir}/jax-wsCache/BankService"/>
    </target>
    <target name="wsimport-service-LameDuckWS" depends="wsimport-init">
        <mkdir dir="${build.generated.dir}/jax-wsCache/service/LameDuckWS"/>
        <wsimport sourcedestdir="${build.generated.dir}/jax-wsCache/service/LameDuckWS" destdir="${build.generated.dir}/jax-wsCache/service/LameDuckWS" wsdl="${basedir}/${conf-dir}xml-resources/web-services/LameDuckWS/wsdl/LameDuckWSDLWrapper.wsdl" catalog="catalog.xml" extension="true" verbose="true" xnocompile="true">
            <depends file="${basedir}/${conf-dir}xml-resources/web-services/LameDuckWS/wsdl/LameDuckWSDLWrapper.wsdl"/>
            <produces dir="${build.generated.dir}/jax-wsCache/service/LameDuckWS"/>
        </wsimport>
        <copy todir="${build.generated.sources.dir}/jax-ws">
            <fileset dir="${build.generated.dir}/jax-wsCache/service/LameDuckWS">
                <include name="**/*.java"/>
            </fileset>
        </copy>
        <copy todir="${build.web.dir}/WEB-INF/wsdl/LameDuckWS">
            <fileset dir="${basedir}/${conf-dir}xml-resources/web-services/LameDuckWS/wsdl/"/>
        </copy>
    </target>
    <target name="wsimport-service-clean-LameDuckWS" depends="-init-project">
        <delete dir="${build.generated.sources.dir}/jax-ws/ws/lameduck"/>
        <delete dir="${build.generated.dir}/jax-wsCache/service/LameDuckWS"/>
    </target>
    <target name="wsimport-client-generate" depends="wsimport-client-BankService"/>
    <target name="wsimport-service-generate" depends="wsimport-service-LameDuckWS"/>
</project>
