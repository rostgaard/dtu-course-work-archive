let x: 4; output: 1;
    rec proc fac(n) if =(!n,0)
                    then return 1  
                    else n := -(!n,1);
                         return *(+(!n,1),fac(n))
                    fi    
in output := fac(x);
   if <>(!output, 24) then
      print "(failed assertion!)"
   else
     print "(ok)"
   fi
end
